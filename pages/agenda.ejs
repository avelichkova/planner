<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
    </head>
    <body>
        <%- include('header/header.ejs')%>
        <h2> Agenda: </h2>
        <table>
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Event</th>
                    <th>Show</th>
                </tr>
            </thead>
            <tbody>
                <% agendaSelectDate.forEach((event, index) => { %>
                    <tr>
                        <td><%-event.time%></td>
                        <td id="event-content<%-index%>"><%-event.eventContent%></td>
                        <td><input id="check<%-index%>" type="checkbox" onclick="checkChanger()"></td>
                        <td><button onclick="window.location.href = '<%= actionEdit %>/<%= event.index %>' " >Edit</button></td>
                        <td><button onclick="deleteEvent('<%= event %>', '<%= event.index %>')">Delete</button></td>
                    </tr>
                <% })%>
            </tbody>
        </table>
        <button onclick="window.location.href = '<%= actionAdd %>'">Add Event</button>
        <p id="text" style="display:none">Checkbox is CHECKED!</p>

        <script>
            function deleteEvent(event, index){
                const route = '/agenda/delete/' + (Number(index) + 1);
                fetch(route, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type' : 'application-json'
                    }, 
                    body: JSON.stringify({event: event, index: index})
                }).then(data => {
                    location.reload();
                })
                .catch(err => {
                    console.log('Error while editing event: ' + err);
                })
            }

            const checkBox = document.getElementById('check0');
            const text = document.getElementById('text');
            // const { data } = require("./agenda");

            function checkChanger() {
                if (checkBox.checked == true){
                    
                    console.log("checked");
                    text.style.display = "block";
                } else {
                    console.log("not checked");
                    text.style.display = "none";
                }
            }
            checkChanger();
        </script>
    </body>
</html> 